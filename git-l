#!/bin/bash -e
#
# git-l
#
# License: MIT
# Copyright (c) 2012 Lennart C. L. Kats

if [ "$1" == "" ]; then
  BRANCH=HEAD
else
  BRANCH=$1
  shift
fi

if ! git remote | grep -iE '^origin$' >/dev/null; then
  LOG=`git log --oneline --first-parent $BRANCH "$@" | head -n 21` 
else
  LOG=`git log --oneline --first-parent origin/master..$BRANCH "$@" | head -n 21`
fi

if [ "$LOG" == "" ] && echo $BRANCH | grep -iE '^(master|origin/master)$' >/dev/null; then
  LOG=`git log --oneline --first-parent $BRANCH "$@" | head -n 21`
fi

if [ `echo "$LOG" | wc -l` -gt 20 ]; then
  echo "$LOG" | head -n 20
  echo ...
else
  echo "$LOG"
fi
